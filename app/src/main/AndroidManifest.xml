<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Tambahkan izin internet jika login membutuhkan koneksi jaringan -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTSEFRANINTABRTARIGAN"
        tools:targetApi="31">

        <!-- Deklarasi MainActivity sebagai entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Deklarasi AgendaListActivity -->
        <activity
            android:name=".AgendaListActivity"
            android:exported="true" />

        <!-- Deklarasi AddAgendaActivity -->
        <activity
            android:name=".AddAgendaActivity"
            android:exported="true" />

    </application>

</manifest>
